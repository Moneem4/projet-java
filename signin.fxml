<AnchorPane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.signinController">
   <children>
      <JFXTextField fx:id="username" labelFloat="true" layoutX="62.0" layoutY="226.0" prefHeight="32.0" prefWidth="385.0" promptText="Username">
         <font>
            <Font size="18.0" />
         </font></JFXTextField>
      <JFXTextField fx:id="fullname" labelFloat="true" layoutX="522.0" layoutY="226.0" prefHeight="32.0" prefWidth="385.0" promptText="Full Name">
         <font>
            <Font size="18.0" />
         </font></JFXTextField>
      <Label layoutX="5.0" layoutY="10.0" prefHeight="105.0" prefWidth="398.0" text="Registration" textFill="#cd017f">
         <font>
            <Font size="72.0" />
         </font>
      </Label>
      <JFXPasswordField fx:id="mdp" labelFloat="true" layoutX="256.0" layoutY="304.0" prefHeight="32.0" prefWidth="385.0" promptText="Password">
         <font>
            <Font size="18.0" />
         </font></JFXPasswordField>
      <JFXButton fx:id="signin" layoutX="488.0" layoutY="556.0" onAction="#signinFn" prefHeight="47.0" prefWidth="82.0" style="-fx-background-color: #4059a9;" text="Sign In" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font></JFXButton>
