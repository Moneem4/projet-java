         <font>
            <Font size="18.0" />
         </font>
      </JFXButton>
      <ImageView fitHeight="119.0" fitWidth="124.0" layoutX="420.0" layoutY="79.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@img/Doctor_Male.png" />
         </image>
      </ImageView>
      <JFXComboBox fx:id="departements" labelFloat="true" layoutX="62.0" layoutY="474.0" prefHeight="32.0" prefWidth="385.0" promptText="Departement" />
      <JFXTextField fx:id="immat" labelFloat="true" layoutX="522.0" layoutY="388.0" prefHeight="32.0" prefWidth="385.0" promptText="immatriculation">
         <font>
            <Font size="18.0" />
         </font>
      </JFXTextField>
      <JFXRadioButton fx:id="doctor" layoutX="267.0" layoutY="388.0" onMouseClicked="#showImmat" text="Doctor">
         <font>
            <Font size="24.0" />
         </font>
      </JFXRadioButton>
      <JFXRadioButton fx:id="Nurse" layoutX="62.0" layoutY="388.0" onMouseClicked="#hideImmat" text="Nurse">
         <font>
            <Font size="24.0" />
         </font>
      </JFXRadioButton>
      <JFXTextField fx:id="speciality" labelFloat="true" layoutX="522.0" layoutY="474.0" prefHeight="32.0" prefWidth="385.0" promptText="Speciality">
         <font>
            <Font size="18.0" />
         </font>
      </JFXTextField>
   </children>
</AnchorPane>
